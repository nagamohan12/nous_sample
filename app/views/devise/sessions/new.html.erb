<h2>Log in</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper_mappings: {
    boolean: :inline_form
  }) do |f| %>

<div class="form-inputs" align="center">
    <%= f.input :email, required: false, autofocus: true, :input_html => {:style=> 'width: 20%'} %>
    <%= f.input :password, required: false , :input_html => {:style=> 'width: 20%'}%>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions" align="center">
   <div class="col-sm-9">
    <%= f.button :submit, "Sign in" %>
   </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
